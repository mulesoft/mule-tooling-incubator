      <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
            <newWizardShortcut id="org.mule.tooling.devkit.wizards.NewDevkitProjectWizard" />		
      		<!--<newWizardShortcut id="org.mule.tooling.devkit.wizards.ModuleNewWizard" />			
			<newWizardShortcut id="org.mule.tooling.devkit.wizards.ConnectorNewWizard" />-->					
      </perspectiveExtension>
   </extension>
      <extension
            id="devkitBuilder"
            name="Devkit Project Builder"
            point="org.eclipse.core.resources.builders">
         <builder
               hasNature="true">
            <run
                  class="org.mule.tooling.devkit.builder.DevkitBuilder">
            </run>
         </builder>
      </extension>
      

      <extension
            id="devkitNature"
            name="Devkit Project Nature"
            point="org.eclipse.core.resources.natures">
         <runtime>
            <run
                  class="org.mule.tooling.devkit.builder.DevkitNature">
            </run>
         </runtime>
         <builder
               id="org.mule.tooling.devkit.devkitBuilder">
         </builder>
      </extension>
      <extension
            id="xmlProblem"
            name="XML Problem"
            point="org.eclipse.core.resources.markers">
         <super
               type="org.eclipse.core.resources.problemmarker">
         </super>
         <persistent
               value="true">
         </persistent>
      </extension>
      <extension
            point="org.eclipse.ui.popupMenus">
         <objectContribution
               id="org.mule.tooling.devkit.muleExtensionsContribution"
               objectClass="org.eclipse.jdt.core.IJavaProject">
            <menu
                  icon="icons/icon.png"
                  id="org.mule.tooling.devkit.menu"
                  label="Anypoint Connector"
                  mnemonic="A"
                  path="additions">
               <separator
                     name="group">
               </separator>
               <separator
                     name="javadoc">
               </separator>
            </menu>
            <action
                  class="org.mule.tooling.devkit.popup.actions.CreateDocumentationAction"
                  enablesFor="1"
                  id="org.mule.tooling.devkit.docAction"
                  label="Create Documentation"
                  icon="icons/generate_doc.gif"
                  menubarPath="org.mule.tooling.devkit.menu/group">
            </action>
            <action
                  class="org.mule.tooling.devkit.popup.actions.SendToPaletteAction"
                  enablesFor="1"
                  id="org.mule.tooling.devkit.paletteAction"
                  label="Try it out!"
                  icon="icons/mule.png"
                  menubarPath="org.mule.tooling.devkit.menu/group">
            </action>
              <action
                  class="org.mule.tooling.devkit.popup.actions.GenerateSourcesAction"
                  enablesFor="1"
                  id="org.mule.tooling.devkit.sourceAction"
                  label="Generate Sources"
                  icon="icons/generate_sources.gif"
                  menubarPath="org.mule.tooling.devkit.menu/group">
            </action>
            <action
                  class="org.mule.tooling.devkit.popup.actions.ToggleJavadocCheckAction"
                  enablesFor="1"
                  id="org.mule.tooling.devkit.toggleJavadocAction"
                  label="Enable/Disable Javadoc Check"
                  icon="icons/javadoc.gif"
                  menubarPath="org.mule.tooling.devkit.menu/javadoc">
            </action>
         </objectContribution>
      </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            category="org.mule.tooling.ui.muleExportCategory"
            class="org.mule.tooling.devkit.export.UpdateSiteExportWizard"
            icon="icons/icon.png"
            id="org.mule.tooling.devkit.export.updateSiteExportWizard"
            name="Mule extension Update Site">
      </wizard>
   </extension>
